# ============================================
# R2C2 Voice Coach - Client Configuration
# ============================================

# Bot Start URL
# For local development: http://localhost:7860/start
# For Pipecat Cloud: https://api.pipecat.daily.co/v1/public/<agent-name>/start
BOT_START_URL="http://localhost:7860/start"

# Pipecat Cloud API Key
# Required only when using Pipecat Cloud deployment
# Leave empty for local development
BOT_START_PUBLIC_API_KEY=""

# API Endpoints
# Base URL for backend API endpoints (feedback upload, session management)
# For local development: http://localhost:7860
# For production: your deployed backend URL
NEXT_PUBLIC_API_BASE_URL="http://localhost:7860"

# Feature Flags
# Enable/disable emotion visualization in UI
NEXT_PUBLIC_ENABLE_EMOTION_VIZ=true

# Enable/disable development plan editing during session
NEXT_PUBLIC_ENABLE_PLAN_EDITING=true

# Enable/disable session export functionality
NEXT_PUBLIC_ENABLE_SESSION_EXPORT=true

# UI Configuration
# Show debug information in UI (true/false)
NEXT_PUBLIC_DEBUG_MODE=false

# Auto-scroll transcript to latest message
NEXT_PUBLIC_AUTO_SCROLL_TRANSCRIPT=true

# Analytics (optional)
# Add your analytics tracking ID if needed
NEXT_PUBLIC_ANALYTICS_ID=""