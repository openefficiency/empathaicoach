# ============================================
# R2C2 Voice Coach - Server Configuration
# ============================================

# Daily.co Configuration
# Required: Your Daily.co API key for creating WebRTC rooms
DAILY_API_KEY=your_daily_api_key_here

# Optional: For local development, you can specify a room to join repeatedly
DAILY_SAMPLE_ROOM_URL=https://yourdomain.daily.co/yourroom
DAILY_SAMPLE_ROOM_TOKEN=your_room_token_if_required

# Google Gemini Configuration
# Required: Your Google Gemini API key for AI conversation
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Database Configuration
# Path to SQLite database for session persistence
# Default: ./database/r2c2_sessions.db
DATABASE_PATH=./database/r2c2_sessions.db

# API Server Configuration
# Port for FastAPI server (default: 7860)
API_PORT=7860

# Host for FastAPI server (default: 0.0.0.0)
API_HOST=0.0.0.0

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# R2C2 Engine Configuration
# Minimum time in seconds for each phase before allowing transition
R2C2_RELATIONSHIP_MIN_DURATION=120
R2C2_REACTION_MIN_DURATION=180
R2C2_CONTENT_MIN_DURATION=240
R2C2_COACHING_MIN_DURATION=300

# Emotion Detection Configuration
# Enable/disable emotion detection (true/false)
EMOTION_DETECTION_ENABLED=true

# Emotion analysis window in seconds for trend detection
EMOTION_ANALYSIS_WINDOW=30

# Session Configuration
# Auto-save interval in seconds
SESSION_AUTOSAVE_INTERVAL=120

# Maximum session duration in seconds (default: 3600 = 1 hour)
MAX_SESSION_DURATION=3600
